<canvas id="myChart" style="width:100%;"></canvas>
<script>
    const xValues = [
        {% for value in xValues %}
        {{ value }}+' Min.',
        {% endfor %}
    ];
    const yValues = [
        {% for value in yValues %}
        {{ value }},
        {% endfor %}
    ];

    new Chart("myChart", {
        type: "line",
        data: {
            labels: xValues,
            datasets: [{
                fill: true,
                lineTension: 0,
                backgroundColor: "rgb(0 100 255 / 47%)",
                borderColor: "#0a8eff",
                data: yValues
            }]
        },
        options: {
            legend: {display: false},
            scales: {
            }
        }
    });
</script>
