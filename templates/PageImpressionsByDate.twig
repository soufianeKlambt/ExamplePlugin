<div class="dropdown-button dataTableAction searchAction searchActive forceActionVisible">
    <div>
        <span class="icon-search"></span>
        <input id="keyword" type="text" class="dataTableSearchInput" placeholder="value...">
    </div>
    <input type="button" value="Suchen" onclick="getData()">
</div>
<div id="data-widget">
</div>
<script>
    getData();
    function getData() {
        var keyword = $('#keyword').val();
        $.get('index.php?module=WidgetKLAMBT&action=pageImpressionsByDateChild&idSite={{ idSite }}&period={{ period }}&date={{ date }}&keyword=' + keyword).success(function (data) {
            $('#data-widget').html(data);
        });
    };
</script>